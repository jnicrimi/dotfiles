{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 7,
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "SHELL": "/opt/homebrew/bin/fish"
  },
  "permissions": {
    "allow": [
      "Bash(cp:*)",
      "Bash(date)",
      "Bash(echo:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git check-ref-format:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git merge:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(git switch:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(npm run:*)",
      "Bash(pwd)",
      "Bash(which:*)",
      "Bash(whoami)",
      "Bash(tree:*)",
      "Bash(yarn:*)",
      "WebFetch(domain:caniuse.com)",
      "WebFetch(domain:developer.mozilla.org)",
      "WebFetch(domain:devdocs.io)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:w3.org)",
      "WebSearch",
      "mcp__serena__activate_project",
      "mcp__serena__check_onboarding_performed",
      "mcp__serena__find_file",
      "mcp__serena__find_referencing_symbols",
      "mcp__serena__find_symbol",
      "mcp__serena__get_current_config",
      "mcp__serena__get_symbols_overview",
      "mcp__serena__initial_instructions",
      "mcp__serena__list_dir",
      "mcp__serena__list_memories",
      "mcp__serena__onboarding",
      "mcp__serena__read_memory",
      "mcp__serena__search_for_pattern",
      "mcp__serena__think_about_collected_information",
      "mcp__serena__think_about_task_adherence",
      "mcp__serena__think_about_whether_you_are_done"
    ],
    "deny": [
      "Bash(alias:*)",
      "Bash(chown:*)",
      "Bash(dd:*)",
      "Bash(export:*)",
      "Bash(function:*)",
      "Bash(git -c:*)",
      "Bash(git config:*)",
      "Bash(git filter-branch:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git remote:*)",
      "Bash(git reset:*)",
      "Bash(git submodule:*)",
      "Bash(kill:*)",
      "Bash(mkfs:*)",
      "Bash(mysql:*)",
      "Bash(nc:*)",
      "Bash(pkill:*)",
      "Bash(psql:*)",
      "Bash(rm -fR:*)",
      "Bash(rm -fr:*)",
      "Bash(rm -Rf:*)",
      "Bash(rm -rf:*)",
      "Bash(scp:*)",
      "Bash(service:*)",
      "Bash(ssh:*)",
      "Bash(sudo:*)",
      "Bash(systemctl:*)",
      "Bash(wget:*)",
      "Read(.aws/*)",
      "Read(.env*)",
      "Read(.ssh/*)",
      "Read(*credentials*)",
      "Read(*password*)",
      "Read(*secret*)",
      "Write(.env*)",
      "Write(/System/*)",
      "Write(/etc/*)",
      "Write(/usr/*)",
      "Write(~/.aws/*)",
      "Write(~/.ssh/*)",
      "Write(*credentials*)",
      "Write(*secret*)"
    ],
    "defaultMode": "plan"
  },
  "model": "opus",
  "language": "japanese",
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.dotfiles/.claude/hooks/notify.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.dotfiles/.claude/hooks/notify.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.dotfiles/.claude/hooks/editorconfig-autofix.sh"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
